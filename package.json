{
  "name": "nustack",
  "version": "1.0.0",
  "description": "",
  "main": "bin/index.js",
  "scripts": {
    "lintTests": "npm run clean && tslint test/**/*.spec.ts",
    "lint": "npm run clean && tslint -p tsconfig.json",
    "test": "npm run clean && nyc mocha --recursive --extension ts -r ts-node/register test/",
    "run": "npm run build && node bin/index.js",
    "build": "npm run clean && tsc",
    "clean": "rm -rf bin/ coverage/ .nyc_output/"
  },
  "author": "",
  "license": "ISC",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@types/node": "^11.13.4"
  }
}
